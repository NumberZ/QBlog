<%- include header %>
<div class="am-g">
	<div class="am-u-lg-6 am-u-sm-centered">
		<form id="form_login" method="post" class="am-form">
		<legend>欢迎登录</legend>
		    <div class="am-form-group">
		      <label for="text">用户名</label>
		      <input type="text" name="name"  placeholder="输入用户名">
		    </div>
		    <div class="am-form-group">
		      <label for="password">密码</label>
		      <input type="password" name="password" placeholder="输入密码">
		    </div>
			<div class="am-cf">
				<input type="button" id="btn_login" value="登录" class="am-btn am-btn-primary am-btn-block am-btn-lg am-center">
			</div>
		</form>
	</div>
</div>


<div class="am-modal am-modal-alert" tabindex="-1" id="my-alert">
	<div class="am-modal-dialog">
		<div class="am-modal-hd">警告！</div>
			<div class="am-modal-bd">
			用户不存在,请注册！
		</div>
		<div class="am-modal-footer">
			<span class="am-modal-btn">确定</span>
		</div>
	</div>
</div> 
<script>
            $("#btn_login").click(function(){
                $.ajax({
                  type:"POST",
                  url:'/login',
                  data:$('#form_login').serialize(),
                  success:function(message) {
                    if(message.messageID == 2){
                      $('#my-alert').modal('open');
                    }else {
                        window.location.href = '/';
                    };
                  }
                });
            });
</script>
<%- include footer %>		